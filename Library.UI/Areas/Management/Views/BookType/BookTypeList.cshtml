
@model List<BookType>


<h3 class="text-center">Kitap Tipi Listeleme</h3>
<a asp-controller="BookType" asp-action="Create" asp-area="Management" style="float:right;">Create</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (BookType item in Model)
        {
            <tr>
                @{
                    int index = 1;
                }

                <th>@index</th>
                <th>@item.Name</th>
                <th>
                    <a class="big-icon" asp-controller="BookType" asp-action="Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i></a>
                    <a class="big-icon m-icon" asp-controller="BookType" asp-action="HardDelete" asp-route-id="@item.ID"><i class="bi bi-x-circle-fill"></i></a>
                </th>

                @{
                    index++;
                }
            </tr>
        }

    </tbody>
</table>