
@model List<Author>



<h3 class="text-center">Author List</h3>
<a asp-controller="Author" asp-action="Create" asp-area="Management" style="float:right;">Create</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
       

            @foreach (Author item in Model)
            {
                <tr>
                    @{int index = 1;
                    }
                    <th>@index</th>
                    <th>@item.FirstName</th>
                    <th>@item.LastName</th>
                    <th>
                        <a class="big-icon" asp-controller="Author" asp-action="Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i></a>
                        <a class="big-icon m-icon" asp-controller="Author" asp-action="Delete" asp-route-id="@item.ID"><i class="bi bi-x-circle-fill"></i></a>
                    </th>
                    @{ 
                        index++;
                    }
                    
                </tr>
                        }
      
    </tbody>
</table>