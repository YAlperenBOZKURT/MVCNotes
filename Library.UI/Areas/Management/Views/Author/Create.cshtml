
@model Author

    <h3 class="text-center">Add New Author</h3>
    <div asp-validation-summary="All">

    </div>

    <form asp-action="Create" asp-controller="Author" asp-area="Management"  method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="FirstName">Name</label>
            <input type="text" class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="LastName">Last Name</label>
            <input type="text" class="form-control" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>