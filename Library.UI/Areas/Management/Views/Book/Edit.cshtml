
@using Library.MODEL.Dto
@model (Book book, List<AuthorDto> authors, List<BookTypeDto> bookTypes)


<h3 class="text-center">Update Book</h3>

<form asp-action="Edit" asp-controller="Book" asp-area="Management" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="book.Name">Name</label>
        <input type="text" class="form-control" asp-for="book.Name" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="book.PageCount">Page Count</label>
        <input type="text" class="form-control" asp-for="book.PageCount" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="book.AuthorID">Author</label>
        <select asp-for="book.AuthorID" asp-items="@(new SelectList(Model.authors,"ID","FullName"))"></select>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="book.BookTypeID">Book Type</label>
        <select asp-for="book.BookTypeID" asp-items="@(new SelectList(Model.bookTypes,"ID","Name"))"></select>
    </div>
    <div class="mb-3">
        <input asp-for="book.ID" type="hidden" />
        <button type="submit" class="btn btn-primary">Update</button>
    </div>

</form>